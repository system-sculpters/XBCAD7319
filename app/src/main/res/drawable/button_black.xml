<!-- res/drawable/button_black.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Solid background color -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="#D3D3D3"/> <!-- Light gray stroke -->
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- Black outline -->
        </shape>
    </item>
</layer-list>
