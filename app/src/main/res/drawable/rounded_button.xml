<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid color for the background -->
    <solid android:color="?attr/ItemBorder"/>

    <!-- Border stroke -->
    <stroke
        android:width="2dp"
        android:color="@android:color/white"/> <!-- Change to white for contrast, or any desired color -->

    <!-- Rounded corners for a button-like effect -->
    <corners android:radius="15dp"/> <!-- Use a smaller radius for a more button-like appearance -->

    <!-- Optional: Add padding to give the button some space -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
