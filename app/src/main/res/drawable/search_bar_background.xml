<!-- res/drawable/merged_shape.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background color -->
    <solid android:color="?attr/colorItemLayoutBg"/> <!-- White background -->

    <!-- Stroke properties -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3"/> <!-- Light gray stroke -->

    <!-- Additional stroke for black outline -->
    <stroke
        android:width="1dp"
        android:color="?attr/ItemBorder"/> <!-- Black outline -->

    <!-- Rounded corners -->
    <corners android:radius="10dp"/> <!-- Rounded corners with 15dp radius -->
</shape>
